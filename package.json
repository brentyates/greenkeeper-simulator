{
  "name": "greenkeeper-simulator",
  "version": "1.0.0",
  "description": "Browser-based 3D isometric game where you maintain a golf course",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:coverage": "COVERAGE=1 playwright test",
    "lint:e2e": "eslint tests/**/*.spec.ts",
    "assets:manifest": "tsx tools/scripts/generate-asset-manifest.ts"
  },
  "dependencies": {
    "@babylonjs/core": "8.49.6",
    "@babylonjs/gui": "8.49.6",
    "@babylonjs/loaders": "8.49.6"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.2",
    "monocart-reporter": "^2.9.23",
    "tsx": "^4.19.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^4.0.16"
  }
}
